<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
    </style>

    <style name="TitleFontStyle">
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">@dimen/font_medium</item>
    </style>

    <style name="TitleFontStyle2">
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">@dimen/font_large</item>
    </style>

    <style name="NumberDescriptionStyle">
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">@dimen/font_extra_large</item>
    </style>

    <style name="NumberDescriptionStyle2">
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">@dimen/font_small</item>
    </style>
</resources>
